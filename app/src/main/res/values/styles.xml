<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="firebase_theme" parent="FirebaseUI">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Remove bar -->
        <item name="android:windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <!-- <item name="android:windowBackground">@mipmap/background_login</item> -->
        <!--<item name="android:scaleType">centerCrop</item>-->
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FirebaseUI.AuthMethodPicker"><!-- Non funziona -.- -->
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@mipmap/background_login</item>
        <!--<item name="android:scaleType">centerCrop</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subtitle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="category_title">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="roundedButton">
        <item name="cornerRadius">20dp</item>
    </style>

    <!--
    <style name="roundedImageViewStyle" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>-->

    <style name="clickable">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="card" parent="clickable">
        <item name="elevation">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>
</resources>